<!doctype html>
<html lang="en">

<head>
    <% include partials/head.ejs %>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <% include partials/header.ejs %>
    <div id="hero-image">
        <h1 id="hero-title">
            <%= title %>
        </h1>
    </div>

    <div id="posters-wrapper" class="content-padding ">

        <% for (var i = 0; i < movies.length; i++){ %>
        <div class="poster"> 
            <a href="/Harry_Potter_episode/<%= movies[i].episode_number %>">
                <img src ="/images/<%= movies[i].poster %>" class="img-responsive">
            
            <div class="poster-info-overlay">
                <h3><%= movies[i].title %></h3>
                <h4>View More <i class="fa fa-arrow-right"></i></h4>
            </div>
            </a>
            
        </div>

        <%}%>
    </div>

    <% include partials/footer.ejs %>
    <% include partials/scripts.ejs %>
</body>

</html>